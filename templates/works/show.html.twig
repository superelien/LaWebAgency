{% extends 'base.html.twig' %}

{% block title %}Works{% endblock %}

{% block body %}
    <h1>Works</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ work.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ work.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ work.image }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ work.updateAt ? work.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ work.description }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ work.tags }}</td>
            </tr>
            <tr>
                <th>ImageBig</th>
                <td>{{ work.imageBig }}</td>
            </tr>
            <tr>
                <th>LinkWebsite</th>
                <td>{{ work.linkWebsite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('works_index') }}">back to list</a>

    <a href="{{ path('works_edit', {'id': work.id}) }}">edit</a>

    {{ include('works/_delete_form.html.twig') }}
