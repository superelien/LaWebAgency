{% extends 'base.html.twig' %}

{% block title %}Works index{% endblock %}

{% block body %}
    <h1>Works index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>UpdateAt</th>
                <th>Description</th>
                <th>Tags</th>
                <th>ImageBig</th>
                <th>LinkWebsite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for work in works %}
            <tr>
                <td>{{ work.id }}</td>
                <td>{{ work.title }}</td>
                <td>{{ work.image }}</td>
                <td>{{ work.updateAt ? work.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ work.description }}</td>
                <td>{{ work.tags }}</td>
                <td>{{ work.imageBig }}</td>
                <td>{{ work.linkWebsite }}</td>
                <td>
                    <a href="{{ path('works_show', {'id': work.id}) }}">show</a>
                    <a href="{{ path('works_edit', {'id': work.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('works_new') }}">Create new</a>
{% endblock %}
