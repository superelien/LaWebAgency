<header class="row">
    <div >
        <div >   
            {# SAMRTPHONE #}
            <nav class="top-nav">
                <div class="menu-wrapper">
                    <a href={{ path('index') }}> <img class="logocenter img-fluid" src="{{asset('asset/LA_WA_BO.png')}}" alt="logo La Web Agency"></a>
                    <ul class="menu">
                        <li>
                            <a href="{{ path('index') }}">{{ 'maison'|trans }}</a>
                        </li>
                        <li>
                             <a href="{{ path('aboutme') }}">{{ 'à propos'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('frontWorks') }}">{{ 'travaux'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('contact') }}">{{ 'contact'|trans }}</a>
                        </li>
                        <li>
                            <button class="menu-close" aria-label="close menu">✕</button>
                        </li>                        
                    </ul> 
                    <div>
                        {% set locales = ['fr', 'en'] %}
                        {% for locale in locales %}
                        {% if  locale != app.request.locale  %}                            
                        <a id="ChangeLangNav" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': locale})) }}"> 
                                
                        {% if locale == 'fr' %}
                        <img class="img-fluid LocaleFlag" src="{{ asset("asset/france.svg") }}" alt="French flag"> Français

                        {% else %}
                        <img class="img-fluid LocaleFlag" src="{{ asset("asset/united-kingdom.svg") }}" alt="united kingdom flag"> English
                                
                        {% endif %}                            
                        </a>                            
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
                {# DESKTOP #}
                <div class="fixed-menu">
                    <a href={{ path('index') }}> <img class="logocenter img-fluid" src="{{asset('asset/LA_WA_BO.png')}}" alt="logo La Web Agency"></a>
                    <button class="menu-open" title="Menu" aria-label="open menu">☰</button>
                    <div class="menuFix">
                        <ul class="menuFix">
                            <li>
                                <a href="{{ path('index') }}">{{ 'maison'|trans }}</a>
                            </li>
                            <li>
                                <a href="{{ path('aboutme') }}">{{ 'à propos'|trans }}</a>
                            </li>
                            <li>
                                <a href="{{ path('frontWorks') }}">{{ 'travaux'|trans }}</a>
                            </li>
                            <li>
                                <a href="{{ path('contact') }}">{{ 'contact'|trans }}</a>
                            </li>                            
                        </ul>
                    </div>
                    <div>
                        {% set locales = ['fr', 'en'] %}
                        {% for locale in locales %}
                        {% if  locale != app.request.locale  %}
                                
                        <a id="ChangeLangNav" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': locale})) }}"> 
                                
                        {% if locale == 'fr' %}
                        <img class="img-fluid LocaleFlag" src="{{ asset("asset/france.svg") }}" alt="French flag"> Français

                        {% else %}
                        <img class="img-fluid LocaleFlag" src="{{ asset("asset/united-kingdom.svg") }}" alt="united kingdom flag"> English
                                
                        {% endif %}                                
                            </a>
                                
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </nav>
        </div>
    </div>
</header>